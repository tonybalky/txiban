---
import BaseLayout from '../layouts/BaseLayout.astro';

const tourName = Astro.url.searchParams.get('tour') || '';
---

<BaseLayout title="Book Your Tour" description="Book your Boa Vista adventure online. Easy scheduling with instant confirmation.">
  <!-- Page Header -->
  <section class="pt-24 pb-8 md:pt-32 md:pb-12 bg-primary">
    <div class="container">
      <div class="max-w-3xl text-center mx-auto">
        <span class="text-white/80 font-semibold text-sm tracking-wider uppercase">Easy Online Booking</span>
        <h1 class="font-display font-bold text-3xl md:text-5xl text-white mt-2 mb-4">
          Book Your Adventure
        </h1>
        <p class="text-white/90 text-lg">
          Select a date and time that works for you. We'll confirm your booking within 24 hours.
        </p>
      </div>
    </div>
  </section>

  <!-- Calendly Widget -->
  <section class="py-12 md:py-16 bg-light">
    <div class="container">
      <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden">
        <!-- Calendly inline widget -->
        <div class="calendly-inline-widget" data-url="https://calendly.com/lexgo75018/30min" style="min-width:320px;height:700px;"></div>
        <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
      </div>

      <!-- Additional Info -->
      <div class="max-w-2xl mx-auto mt-12 text-center">
        <h3 class="font-display font-semibold text-xl text-dark mb-4">What happens next?</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="p-4">
            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3">
              <span class="text-primary font-bold text-lg">1</span>
            </div>
            <h4 class="font-semibold text-dark mb-1">Pick a Time</h4>
            <p class="text-gray-600 text-sm">Choose a convenient slot for a quick call</p>
          </div>
          <div class="p-4">
            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3">
              <span class="text-primary font-bold text-lg">2</span>
            </div>
            <h4 class="font-semibold text-dark mb-1">We Call You</h4>
            <p class="text-gray-600 text-sm">We'll confirm details and answer questions</p>
          </div>
          <div class="p-4">
            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3">
              <span class="text-primary font-bold text-lg">3</span>
            </div>
            <h4 class="font-semibold text-dark mb-1">You're Booked!</h4>
            <p class="text-gray-600 text-sm">Receive confirmation and get ready for adventure</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Alternative Contact -->
  <section class="py-12 bg-white">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <p class="text-gray-600 mb-4">Prefer to book directly?</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="https://wa.me/2389567904"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-green-500 text-white font-semibold rounded-lg hover:bg-green-600 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            WhatsApp Us
          </a>
          <a
            href="tel:+2389567904"
            class="inline-flex items-center px-6 py-3 bg-gray-100 text-dark font-semibold rounded-lg hover:bg-gray-200 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            +238 956 7904
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
