---
import BaseLayout from '../layouts/BaseLayout.astro';

const guides = [
  {
    name: 'Fredy',
    role: 'Your Smiling Guide',
    image: '/images/guides/fredy.jpg',
    description: 'Fredy is pure positive energy. Always smiling and full of interesting stories, he loves meeting new people and sharing the island in a fun and engaging way. With Fredy, every tour feels easy, friendly, and full of good vibes.',
    languages: ['English', 'French', 'Portuguese', 'Spanish']
  },
  {
    name: 'Anna',
    role: 'The Sweet Explorer',
    image: '/images/guides/anna.jpg',
    description: 'Anna is warm, sweet, and naturally curious. She truly enjoys discovering new places and sharing that excitement with guests. Her happiness is contagious, and her gentle approach makes every experience feel personal and memorable.',
    languages: ['English', 'French', 'Portuguese', 'Spanish']
  },
  {
    name: 'Cristiano',
    role: 'Our Expert Driver',
    image: '/images/guides/cristiano.jpg',
    description: 'Cristiano is our go-to expert behind the wheel. He loves challenges, knows the island inside out, and always drives with confidence and care. Always in a good mood, he turns every journey into a smooth and enjoyable ride.',
    languages: ['English', 'French', 'Portuguese', 'Spanish']
  },
  {
    name: 'Evandro',
    role: 'The Adventurous Spirit',
    image: '/images/guides/evandro.jpg',
    description: 'Evandro brings an adventurous spirit to every tour. His enthusiasm for exploring Boa Vista is infectious, and he loves showing guests the hidden gems of the island. With Evandro, every trip becomes an exciting adventure.',
    languages: ['English', 'French', 'Portuguese', 'Spanish']
  }
];

const languages = ['English', 'French', 'Portuguese', 'Spanish'];
---

<BaseLayout title="Meet Our Guides" description="Meet the friendly local guides of Boavista Go. Our team of passionate experts will make your Boa Vista adventure unforgettable.">
  <!-- Hero Section -->
  <section class="pt-24 pb-12 md:pt-32 md:pb-16 bg-primary">
    <div class="container">
      <div class="max-w-3xl text-center mx-auto">
        <span class="text-white/80 font-semibold text-sm tracking-wider uppercase">Our Team</span>
        <h1 class="font-display font-bold text-4xl md:text-5xl text-white mt-2 mb-4">
          Meet Our Guides
        </h1>
        <p class="text-white/90 text-lg">
          Our passionate local guides are what make every Boavista Go tour truly special. Get to know the friendly faces who'll show you the best of Boa Vista.
        </p>
      </div>
    </div>
  </section>

  <!-- Languages Banner -->
  <section class="py-6 bg-light border-b">
    <div class="container">
      <div class="flex flex-wrap items-center justify-center gap-4 md:gap-8">
        <span class="text-gray-600 font-medium">We speak:</span>
        <div class="flex flex-wrap gap-3">
          {languages.map(lang => (
            <span class="inline-flex items-center gap-2 px-4 py-2 bg-white rounded-full shadow-sm text-sm font-medium text-dark">
              <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
              </svg>
              {lang}
            </span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Guides Grid -->
  <section class="py-12 md:py-20 bg-white">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-10">
        {guides.map((guide, index) => (
          <article class="group">
            <!-- Photo -->
            <div class="relative aspect-[4/5] rounded-2xl overflow-hidden mb-6 shadow-lg">
              <img
                src={guide.image}
                alt={guide.name}
                class="w-full h-full object-cover object-top transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <h2 class="font-display font-bold text-2xl text-white mb-1">{guide.name}</h2>
                <p class="text-white/90 font-medium">{guide.role}</p>
              </div>
            </div>

            <!-- Info -->
            <div class="px-2">
              <p class="text-gray-600 mb-4 leading-relaxed">
                {guide.description}
              </p>

              <!-- Languages -->
              <div class="flex flex-wrap gap-2">
                {guide.languages.map(lang => (
                  <span class="text-xs font-medium px-3 py-1 bg-primary/10 text-primary rounded-full">
                    {lang}
                  </span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Our Guides Section -->
  <section class="py-12 md:py-16 bg-light">
    <div class="container">
      <div class="text-center mb-10">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-dark mb-4">
          Why Our Guides Make the Difference
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Born and raised on Boa Vista, our guides know every hidden gem, secret beach, and local story.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center p-4">
          <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-3">
            <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-dark mb-1">Local Experts</h3>
          <p class="text-gray-600 text-sm">Born & raised on Boa Vista</p>
        </div>

        <div class="text-center p-4">
          <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-3">
            <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
            </svg>
          </div>
          <h3 class="font-semibold text-dark mb-1">4 Languages</h3>
          <p class="text-gray-600 text-sm">EN, FR, PT, ES</p>
        </div>

        <div class="text-center p-4">
          <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-3">
            <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-dark mb-1">Friendly</h3>
          <p class="text-gray-600 text-sm">Warm & welcoming</p>
        </div>

        <div class="text-center p-4">
          <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-3">
            <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="font-semibold text-dark mb-1">Safe & Reliable</h3>
          <p class="text-gray-600 text-sm">Professional drivers</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 md:py-16 bg-white">
    <div class="container">
      <div class="bg-primary rounded-2xl p-8 md:p-12 text-center">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-white mb-4">
          Ready to Explore with Us?
        </h2>
        <p class="text-white/90 mb-8 max-w-2xl mx-auto">
          Book your tour today and let our amazing guides show you the real Boa Vista!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/tours"
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary font-semibold rounded-lg hover:bg-gray-100 transition-colors"
          >
            View All Tours
          </a>
          <a
            href="https://wa.me/2389567904"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-8 py-4 bg-transparent text-white font-semibold rounded-lg border-2 border-white hover:bg-white/10 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            WhatsApp Us
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
