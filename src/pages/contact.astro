---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<BaseLayout title="Contact Us" description="Get in touch with Boavista Go Tours & Expeditions. Contact us for tour bookings, custom trips, or any questions about Boa Vista adventures.">
  <!-- Hero Section -->
  <section class="pt-24 pb-12 md:pt-32 md:pb-16 bg-dark">
    <div class="container">
      <div class="max-w-3xl">
        <span class="text-primary font-semibold text-sm tracking-wider uppercase">Get in Touch</span>
        <h1 class="font-display font-bold text-4xl md:text-5xl text-white mt-2 mb-4">
          Contact Us
        </h1>
        <p class="text-gray-300 text-lg">
          Ready to explore Boa Vista? We're here to help plan your perfect adventure. Reach out via WhatsApp for the fastest response!
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 md:py-24 bg-light">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Contact Info -->
        <div class="lg:col-span-1">
          <h2 class="font-display font-semibold text-2xl text-dark mb-6">Contact Information</h2>

          <div class="space-y-6">
            <!-- Address -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-dark mb-1">Address</h3>
                <p class="text-gray-600 text-sm">
                  Riba d Olte, Pr√©dio DjoneYo<br />
                  Sal Rei, 5110<br />
                  Cape Verde
                </p>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-dark mb-1">Phone</h3>
                <a href="tel:+2389567904" class="text-gray-600 hover:text-primary transition-colors text-sm">
                  +238 956 7904
                </a>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-dark mb-1">Email</h3>
                <a href="mailto:grupoboavistago@gmail.com" class="text-gray-600 hover:text-primary transition-colors text-sm">
                  grupoboavistago@gmail.com
                </a>
              </div>
            </div>

            <!-- WhatsApp -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-dark mb-1">WhatsApp</h3>
                <a
                  href="https://wa.me/2389567904"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-600 hover:text-green-600 transition-colors text-sm"
                >
                  Message us on WhatsApp
                </a>
              </div>
            </div>
          </div>

          <!-- Business Hours -->
          <div class="mt-8 p-6 bg-white rounded-xl">
            <h3 class="font-semibold text-dark mb-4">Business Hours</h3>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600">Monday - Friday</span>
                <span class="text-dark font-medium">8:00 AM - 6:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Saturday</span>
                <span class="text-dark font-medium">9:00 AM - 4:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Sunday</span>
                <span class="text-dark font-medium">By appointment</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-2xl p-6 md:p-8 shadow-sm">
            <h2 class="font-display font-semibold text-2xl text-dark mb-2">Send Us a Message</h2>
            <p class="text-gray-600 mb-8">
              Fill out the form below and we'll get back to you within 24 hours. For urgent bookings, contact us on WhatsApp.
            </p>
            <ContactForm />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="h-96 bg-gray-200 relative">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15186.674366182655!2d-22.9135!3d16.1760!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x935093b3a8c5cd7d%3A0x2d5d5c9e4e3c0c9a!2sSal%20Rei%2C%20Cape%20Verde!5e0!3m2!1sen!2sus!4v1703644800000!5m2!1sen!2sus"
      class="w-full h-full border-0"
      allowfullscreen
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      title="Boavista Go Location"
    ></iframe>
  </section>
</BaseLayout>
