---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import TourCard from '../components/TourCard.astro';
import Testimonials from '../components/Testimonials.astro';

// Featured tours with real content
const featuredTours = [
  {
    title: '4x4 Full Day Island Tour',
    description: 'Explore Santa Monica beach, discover shipwrecks, see Varandinha\'s mysterious caves, sandboard on dunes, and savor a tasty local lunch.',
    image: '/images/tours/island-tour.jpg',
    duration: '8 hours',
    price: 'From €70',
    slug: 'island-tour',
    category: 'Full Day',
    featured: true
  },
  {
    title: 'Whale Watching Expedition',
    description: 'Join us on the ultimate whale-watching expedition in the pristine waters of Boa Vista Island, where every wave brings the promise of a breathtaking spectacle.',
    image: '/images/tours/whale-watching.jpg',
    duration: '3 hours',
    price: 'From €80',
    slug: 'whale-watching',
    category: 'Wildlife',
    featured: true
  },
  {
    title: '4x4 HD Turtle, Shark, Santa Monica, Sandboarding & Local Taste',
    description: 'Experience sandboarding, visit Santa Monica, see green turtles and lemon sharks in their natural habitat, and taste local specialties.',
    image: '/images/tours/green-turtle.jpg',
    duration: '4 hours',
    price: 'From €45',
    slug: 'green-turtle-tour',
    category: 'Wildlife',
    topPicked: true
  },
  {
    title: '4WD Buggy Adventure',
    description: 'Explore this amazing environment surrounded by untouched nature. Drive through sand dunes, desert and visit Fatima\'s Chapel.',
    image: '/images/tours/buggy-tour.jpg',
    duration: '2 hours',
    price: 'From €70',
    slug: 'buggy-adventure',
    category: 'Adventure'
  },
  {
    title: 'Off-Road Quad Bike Tour',
    description: 'Discover the diverse scenery of Cape Verde on a quad tour through sand dunes, beaches, and caves. Feel the thrill of driving your own vehicle.',
    image: '/images/tours/quad-tour.jpg',
    duration: '4 hours',
    price: 'From €150',
    slug: 'quad-tour',
    category: 'Adventure'
  },
  {
    title: '4x4 HD South - The Big Surprise',
    description: 'Discover the south coast on this guided 4x4 tour. Explore the Viana desert, Varandinha caves, Santa Monica beach and enjoy a cocktail!',
    image: '/images/tours/south-tour.jpg',
    duration: '4 hours',
    price: 'From €40',
    slug: 'south-tour',
    category: 'Half Day'
  }
];

const whyChooseUs = [
  {
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
    title: 'Local Expertise',
    description: 'Born and raised on Boa Vista, we know every hidden gem, secret beach, and best viewpoint on the island.'
  },
  {
    icon: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
    title: 'Best Value',
    description: 'Competitive pricing without compromising on quality. Get the most out of your holiday experience.'
  },
  {
    icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
    title: 'Small Groups',
    description: 'Personalized attention with intimate group sizes for a more authentic and memorable experience.'
  },
  {
    icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z',
    title: 'Passion & Care',
    description: 'We aren\'t perfect yet but we strive to do our best and we are committed to honesty in everything we do.'
  }
];
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <Hero
    title="Discover the Magic of Boa Vista"
    subtitle="Experience unforgettable adventures on Cape Verde's most beautiful island. From pristine beaches to desert dunes, let us show you the best of Boa Vista."
    image="/images/hero-beach.jpg"
    ctaText="Explore Our Tours"
    ctaLink="/tours"
  />

  <!-- Featured Tours Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container">
      <div class="text-center mb-12 md:mb-16 animate-on-scroll">
        <span class="text-primary font-semibold text-sm tracking-wider uppercase">Our Experiences</span>
        <h2 class="font-display font-bold text-3xl md:text-4xl text-dark mt-2 mb-4">
          Popular Tours & Adventures
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Boa Vista has 55 kilometers of white sandy beach along its coast providing a wild environment where nature still surprises us with its beauty.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {featuredTours.map(tour => (
          <TourCard {...tour} />
        ))}
      </div>

      <div class="text-center mt-12">
        <a
          href="/tours"
          class="inline-flex items-center px-8 py-4 bg-primary text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors"
        >
          View All Tours
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-16 md:py-24 bg-light">
    <div class="container">
      <div class="text-center mb-12 md:mb-16 animate-on-scroll">
        <span class="text-primary font-semibold text-sm tracking-wider uppercase">Why Boavista Go</span>
        <h2 class="font-display font-bold text-3xl md:text-4xl text-dark mt-2 mb-4">
          Your Adventure Awaits
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Boa Vista is known by the locals as "The Fantastic Island" - and you will agree with that definition for sure!
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {whyChooseUs.map((item, index) => (
          <div class={`text-center animate-fade-up delay-${(index + 1) * 100}`}>
            <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center mx-auto mb-4 hover:bg-primary/20 hover:scale-110 transition-all duration-300">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
              </svg>
            </div>
            <h3 class="font-display font-semibold text-lg text-dark mb-2">{item.title}</h3>
            <p class="text-gray-600 text-sm">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About Preview Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="relative">
          <img
            src="/images/about-preview.jpg"
            alt="Boavista Go Adventures"
            class="rounded-2xl shadow-xl w-full"
            loading="lazy"
          />
          <div class="absolute -bottom-6 -right-6 bg-primary text-white p-6 rounded-xl shadow-lg hidden md:block">
            <div class="text-4xl font-bold">55km</div>
            <div class="text-sm opacity-90">Of Beautiful Beaches</div>
          </div>
        </div>
        <div>
          <span class="text-primary font-semibold text-sm tracking-wider uppercase">About Us</span>
          <h2 class="font-display font-bold text-3xl md:text-4xl text-dark mt-2 mb-6">
            Your Local Guides to Paradise
          </h2>
          <p class="text-gray-600 mb-4">
            Our tours were made especially for people who want to taste Boa Vista's spirit and culture in a very fun way. Get the most out of your holiday by exploring the best of the island with us.
          </p>
          <p class="text-gray-600 mb-8">
            Cape Verde Islands hold the third largest community of Loggerhead sea turtles in the world and Boa Vista receives over 90% of them along its stunning coastline. Let us show you this and so much more!
          </p>
          <a
            href="/tours"
            class="inline-flex items-center text-primary font-semibold hover:underline"
          >
            Explore Our Tours
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <Testimonials />

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-primary relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
          <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100" height="100" fill="url(#grid)" />
      </svg>
    </div>
    <div class="container relative">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="font-display font-bold text-3xl md:text-4xl text-white mb-6">
          Ready for Your Boa Vista Adventure?
        </h2>
        <p class="text-white/90 text-lg mb-8">
          Jump on this adventure with us! Say goodbye to the highway and welcome off-road exploration of the fantastic island.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary font-semibold rounded-lg hover:bg-gray-100 transition-colors"
          >
            Get in Touch
          </a>
          <a
            href="https://wa.me/2389567904"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-8 py-4 bg-transparent text-white font-semibold rounded-lg border-2 border-white hover:bg-white/10 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            WhatsApp Us
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
