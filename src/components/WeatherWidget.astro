---
// Static weather display for Boa Vista
// Shows typical weather (sunny, 25-30°C year-round)
// Avoids API calls for better performance

const currentMonth = new Date().getMonth();

// Boa Vista has consistent weather - adjust slightly by season
const getSeasonalWeather = () => {
  // Nov-Feb: slightly cooler (22-26°C), Dec-Jan: possible rain
  // Mar-Jun: warm (24-28°C), dry
  // Jul-Oct: hot (26-30°C), trade winds
  if (currentMonth >= 10 || currentMonth <= 1) {
    return { temp: 24, condition: 'Sunny', wind: 15, humidity: 65 };
  } else if (currentMonth >= 2 && currentMonth <= 5) {
    return { temp: 26, condition: 'Sunny', wind: 18, humidity: 60 };
  } else {
    return { temp: 28, condition: 'Sunny', wind: 22, humidity: 55 };
  }
};

const weather = getSeasonalWeather();
---

<div class="weather-widget bg-gradient-to-br from-sky-400 to-blue-500 rounded-2xl p-5 text-white shadow-lg">
  <div class="flex items-center justify-between">
    <div>
      <div class="flex items-center gap-2 mb-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span class="text-sm font-medium opacity-90">Boa Vista</span>
      </div>
      <div class="text-4xl font-bold">{weather.temp}°C</div>
      <div class="text-sm opacity-80 mt-1">{weather.condition}</div>
    </div>

    <!-- Sun icon -->
    <div class="sun-icon">
      <svg class="w-16 h-16 text-yellow-300 drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z"/>
      </svg>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4 mt-4 pt-4 border-t border-white/20">
    <div class="flex items-center gap-2">
      <svg class="w-4 h-4 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
      <div>
        <div class="text-xs opacity-70">Wind</div>
        <div class="text-sm font-medium">{weather.wind} km/h</div>
      </div>
    </div>
    <div class="flex items-center gap-2">
      <svg class="w-4 h-4 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
      </svg>
      <div>
        <div class="text-xs opacity-70">Humidity</div>
        <div class="text-sm font-medium">{weather.humidity}%</div>
      </div>
    </div>
  </div>

  <div class="mt-4 text-xs opacity-70 text-center">
    Perfect weather for adventures!
  </div>
</div>

<style>
  .sun-icon {
    animation: pulse-glow 3s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% {
      filter: drop-shadow(0 0 8px rgba(253, 224, 71, 0.5));
    }
    50% {
      filter: drop-shadow(0 0 16px rgba(253, 224, 71, 0.8));
    }
  }
</style>
