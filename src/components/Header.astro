</div>

<style>
  /* Hamburger Icon Animation */
  .hamburger-icon {
    width: 24px;
    height: 18px;
    position: relative;
  }

  .hamburger-line {
    display: block;
    position: absolute;
    height: 2px;
    width: 100%;
    background: currentColor;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .hamburger-line.top { top: 0; }
  .hamburger-line.middle { top: 8px; }
  .hamburger-line.bottom { top: 16px; }

  /* Open state - hamburger transforms to X */
  :global(.menu-open) .hamburger-line.top {
    transform: rotate(45deg);
    top: 8px;
  }

  :global(.menu-open) .hamburger-line.middle {
    opacity: 0;
    transform: translateX(-10px);
  }

  :global(.menu-open) .hamburger-line.bottom {
    transform: rotate(-45deg);
    top: 8px;
  }

  /* Fullscreen Mobile Menu */
  .mobile-menu-overlay {
    position: fixed;
    inset: 0;
    background: white;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mobile-menu-overlay.is-open {
    opacity: 1;
    visibility: visible;
  }

  .mobile-menu-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100%;
    padding: 100px 24px 120px;
  }

  .mobile-nav-item {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.3s ease, transform 0.3s ease;
    transition-delay: var(--delay);
  }

  .mobile-menu-overlay.is-open .mobile-nav-item {
    opacity: 1;
    transform: translateY(0);
  }

  .mobile-social-links {
    position: absolute;
    bottom: 40px;
    display: flex;
    gap: 24px;
    opacity: 0;
    transition: opacity 0.3s ease 0.4s;
  }

  .mobile-menu-overlay.is-open .mobile-social-links {
    opacity: 1;
  }

  .mobile-social-links a {
    color: #666;
    transition: color 0.2s ease, transform 0.2s ease;
  }

  .mobile-social-links a:hover {
    color: #a82005;
    transform: scale(1.1);
  }

  .mobile-translate {
    display: flex;
    justify-content: center;
  }
</style>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const header = document.getElementById('main-header');

  let isOpen = false;

  menuBtn?.addEventListener('click', () => {
    isOpen = !isOpen;

    if (isOpen) {
      mobileMenu?.classList.add('is-open');
      menuBtn.classList.add('menu-open');
      document.body.style.overflow = 'hidden';
      // Hide other floating elements
      document.body.classList.add('mobile-menu-active');
    } else {
      mobileMenu?.classList.remove('is-open');
      menuBtn.classList.remove('menu-open');
      document.body.style.overflow = '';
      document.body.classList.remove('mobile-menu-active');
    }

    menuBtn.setAttribute('aria-expanded', String(isOpen));
  });

  // Close menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.remove('is-open');
      menuBtn?.classList.remove('menu-open');
      document.body.style.overflow = '';
      document.body.classList.remove('mobile-menu-active');
      isOpen = false;
    });
  });

  // Shrink header on scroll
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('shadow-md');
    } else {
      header?.classList.remove('shadow-md');
    }
  });
</script>
