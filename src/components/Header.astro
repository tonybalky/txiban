---
import GoogleTranslate from './GoogleTranslate.astro';

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/tours', label: 'Tours' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 bg-white/90 backdrop-blur-md shadow-sm z-50 transition-all duration-300" id="main-header">
  <div class="container">
    <nav class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <img src="/logo/logo.png" alt="Boavista Go" class="h-10 md:h-12 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-8">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class={`text-sm font-medium transition-colors hover:text-primary relative after:absolute after:left-0 after:bottom-[-4px] after:w-0 after:h-0.5 after:bg-primary after:transition-all hover:after:w-full ${
                currentPath === link.href ? 'text-primary after:w-full' : 'text-dark'
              }`}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Desktop CTA + Translate -->
      <div class="hidden md:flex items-center gap-3">
        <GoogleTranslate />
        <a
          href="/contact"
          class="inline-flex items-center px-5 py-2.5 bg-primary text-white text-sm font-semibold rounded-lg hover:bg-primary-700 hover:scale-105 transition-all duration-300 shadow-md hover:shadow-lg"
        >
          Book Now
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 -mr-2 text-dark"
        aria-label="Open menu"
        aria-expanded="false"
      >
        <div class="hamburger-icon">
          <span class="hamburger-line top"></span>
          <span class="hamburger-line middle"></span>
          <span class="hamburger-line bottom"></span>
        </div>
      </button>
    </nav>
  </div>
</header>

<!-- Fullscreen Mobile Menu - OUTSIDE header for proper z-index -->
<div id="mobile-menu" class="mobile-menu-overlay md:hidden">
  <div class="mobile-menu-content">
    <ul class="flex flex-col items-center justify-center gap-8">
      {navLinks.map((link, index) => (
        <li class="mobile-nav-item" style={`--delay: ${index * 0.1}s`}>
          <a
            href={link.href}
            class={`text-3xl font-display font-bold transition-colors ${
              currentPath === link.href ? 'text-primary' : 'text-dark hover:text-primary'
            }`}
          >
            {link.label}
          </a>
        </li>
      ))}
      <li class="mobile-nav-item pt-4" style="--delay: 0.3s">
        <a
          href="/contact"
          class="inline-flex items-center px-8 py-4 bg-primary text-white text-lg font-semibold rounded-xl shadow-lg"
        >
          Book Your Adventure
        </a>
      </li>
      <li class="mobile-nav-item pt-2" style="--delay: 0.35s">
        <div class="mobile-translate">
          <GoogleTranslate />
        </div>
      </li>
    </ul>

    <!-- Social links in mobile menu -->
    <div class="mobile-social-links">
