---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/tours', label: 'Tours' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-sm shadow-sm z-50">
  <div class="container">
    <nav class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <img src="/logo/logo.png" alt="Boavista Go" class="h-10 md:h-12 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-8">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class={`text-sm font-medium transition-colors hover:text-primary ${
                currentPath === link.href ? 'text-primary' : 'text-dark'
              }`}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Desktop CTA -->
      <a
        href="/contact"
        class="hidden md:inline-flex items-center px-5 py-2.5 bg-primary text-white text-sm font-semibold rounded-lg hover:bg-primary-700 transition-colors"
      >
        Book Now
      </a>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 -mr-2 text-dark"
        aria-label="Open menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          <path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t">
    <div class="container py-4">
      <ul class="flex flex-col gap-4">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class={`block py-2 text-base font-medium transition-colors ${
                currentPath === link.href ? 'text-primary' : 'text-dark'
              }`}
            >
              {link.label}
            </a>
          </li>
        ))}
        <li class="pt-2">
          <a
            href="/contact"
            class="block w-full text-center px-5 py-3 bg-primary text-white font-semibold rounded-lg"
          >
            Book Now
          </a>
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  menuBtn?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
    menuBtn.setAttribute('aria-expanded', isOpen ? 'false' : 'true');
  });
</script>
